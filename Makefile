NAME = Doomdepths

SRC_DIR = src

SRC := $(shell find $(SRC_DIR) -name '*.c')

all:
	gcc -g3 -o $(NAME) $(SRC) -L./inc -I./inc

clean:
	rm -f *~ | rm -f *.o

fclean: clean
	rm -f $(NAME)

re:	fclean all